<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up - Todo App</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #1e1e1e 0%, #2d2d2d 100%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #e0e0e0;
        padding: 20px;
      }

      .signup-container {
        width: 100%;
        max-width: 780px;
        padding: 40px;
        background: #252525;
        border-radius: 12px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        border: 1px solid #3a3a3a;
      }

      .signup-header {
        text-align: center;
        margin-bottom: 40px;
      }

      .signup-header h1 {
        font-size: 28px;
        margin-bottom: 8px;
        color: #ffffff;
        font-weight: 600;
      }

      .signup-header p {
        color: #a0a0a0;
        font-size: 14px;
      }

      .form-group {
        margin-bottom: 22px;
      }

      label {
        display: block;
        margin-bottom: 8px;
        font-size: 14px;
        font-weight: 500;
        color: #d0d0d0;
      }

      input[type="text"],
      input[type="email"],
      input[type="password"] {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid #3a3a3a;
        border-radius: 8px;
        background: #1f1f1f;
        color: #e0e0e0;
        font-size: 14px;
        transition: all 0.3s ease;
      }

      input[type="text"]:focus,
      input[type="email"]:focus,
      input[type="password"]:focus {
        outline: none;
        border-color: #5a7cff;
        background: #2a2a2a;
        box-shadow: 0 0 0 3px rgba(90, 124, 255, 0.1);
      }

      input[type="text"]::placeholder,
      input[type="email"]::placeholder,
      input[type="password"]::placeholder {
        color: #666666;
      }

      .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
        padding: 0px 0px 20px 0px;
      }

      .form-row .form-group {
        margin-bottom: 0;
      }

      .password-requirements {
        background: #1f1f1f;
        border: 1px solid #3a3a3a;
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 24px;
        font-size: 13px;
        color: #a0a0a0;
      }

      .requirement {
        margin-bottom: 8px;
        display: flex;
        align-items: center;
      }

      .requirement:last-child {
        margin-bottom: 0;
      }

      .requirement-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 18px;
        height: 18px;
        border-radius: 50%;
        margin-right: 8px;
        background: #3a3a3a;
        color: #666666;
        font-size: 11px;
      }

      .requirement.met .requirement-icon {
        background: #4a7c4a;
        color: #7cff7c;
      }

      .error-message {
        background: #3a1f1f;
        border: 1px solid #8b4545;
        color: #ff6b6b;
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 24px;
        font-size: 14px;
        display: none;
      }

      .error-message.show {
        display: block;
      }

      .success-message {
        background: #1f3a1f;
        border: 1px solid #458b45;
        color: #7cff7c;
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 24px;
        font-size: 14px;
        display: none;
      }

      .success-message.show {
        display: block;
      }

      .btn-signup {
        width: 100%;
        padding: 12px 16px;
        background: linear-gradient(135deg, #5a7cff 0%, #4a6cef 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-bottom: 20px;
      }

      .btn-signup:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 24px rgba(90, 124, 255, 0.3);
      }

      .btn-signup:active {
        transform: translateY(0);
      }

      .btn-signup:disabled {
        background: linear-gradient(135deg, #3a5cdf 0%, #2a4ccf 100%);
        opacity: 0.6;
        cursor: not-allowed;
      }

      .login-link {
        text-align: center;
        color: #a0a0a0;
        font-size: 14px;
      }

      .login-link a {
        color: #5a7cff;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
      }

      .login-link a:hover {
        color: #7a9cff;
      }
      .pass-container {
        display: flex;
        border: 1px solid red;
      }

      @media (max-width: 600px) {
        .signup-container {
          padding: 30px 20px;
        }

        .signup-header h1 {
          font-size: 24px;
        }

        .form-row {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <div class="signup-container">
      <div class="signup-header">
        <h1>Create Account</h1>
        <p>Join us to manage your todos efficiently</p>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
      <div class="error-message show"><%= error %></div>
      <% } %> <% if (typeof success !== 'undefined' && success) { %>
      <div class="success-message show"><%= success %></div>
      <% } %>

      <form method="post" action="/registrationSubmit" id="signupForm">
        <div class="form-row">
          <div class="form-group">
            <label for="username">Username</label>
            <input
              type="text"
              id="username"
              name="username"
              placeholder="<%= typeof errorMsg !== 'undefined' ? errorMsg : 'Choose a username' %>"
              required
              minlength="3"
            />
          </div>

          <div class="form-group">
            <label for="fullname">Full Name</label>
            <input
              type="text"
              id="fullname"
              name="fullname"
              value="<%= locals.fullname %>"
              placeholder="Your full name"
              required
            />
          </div>
        </div>

        <div class="form-group">
          <label for="email">Email Address</label>
          <input
            type="email"
            id="email"
            name="email"
            value="<%= locals.email %>"
            placeholder="Enter your email"
            required
          />
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Create a strong password"
              required
              value="SK@legend1326"
              minlength="6"
            />
          </div>
          <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              value="SK@legend1326"
              placeholder="Re-enter your password"
              required
            />
          </div>
        </div>

        <div class="password-requirements">
          <div class="requirement met" id="lengthReq">
            <span class="requirement-icon">✓</span>
            <span>At least 6 characters</span>
          </div>
          <div class="requirement" id="uppercaseReq">
            <span class="requirement-icon">✓</span>
            <span>One uppercase letter</span>
          </div>
          <div class="requirement" id="numberReq">
            <span class="requirement-icon">✓</span>
            <span>One number</span>
          </div>
          <div class="requirement" id="specialReq">
            <span class="requirement-icon">✓</span>
            <span>One special character</span>
          </div>
        </div>

        <button type="submit" class="btn-signup">Create Account</button>
      </form>

      <div class="login-link">
        Already have an account? <a href="/login">Sign in here</a>
      </div>
    </div>

    <script>
      const passwordInput = document.getElementById("password");
      const confirmPasswordInput = document.getElementById("confirmPassword");
      const signupForm = document.getElementById("signupForm");

      // Password strength checker
      passwordInput.addEventListener("input", function () {
        const password = this.value;
        const lengthReq = document.getElementById("lengthReq");
        const uppercaseReq = document.getElementById("uppercaseReq");
        const numberReq = document.getElementById("numberReq");
        const specialReq = document.getElementById("specialReq");

        // Check length
        password.length >= 6
          ? lengthReq.classList.add("met")
          : lengthReq.classList.remove("met");

        // Check uppercase
        /[A-Z]/.test(password)
          ? uppercaseReq.classList.add("met")
          : uppercaseReq.classList.remove("met");

        // Check number
        /[0-9]/.test(password)
          ? numberReq.classList.add("met")
          : numberReq.classList.remove("met");

        // Check special character
        /[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]/.test(password)
          ? specialReq.classList.add("met")
          : specialReq.classList.remove("met");
      });

      // Form validation
      signupForm.addEventListener("submit", function (e) {
        const password = passwordInput.value;
        const confirmPassword = confirmPasswordInput.value;

        if (password !== confirmPassword) {
          e.preventDefault();
          alert("Passwords do not match!");
          return;
        }

        if (password.length < 6) {
          e.preventDefault();
          alert("Password must be at least 6 characters long!");
          return;
        }

        if (!/[A-Z]/.test(password) || !/[0-9]/.test(password)) {
          e.preventDefault();
          alert(
            "Password must contain at least one uppercase letter and one number!"
          );
          return;
        }
      });
    </script>
  </body>
</html>
